{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "clean:all": "turbo run clean:all && rm -rf .husky && rm -rf .turbo && rm -rf bun.lock && rm -rf node_modules",
    "prepare": "husky",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "lint:format": "biome check --write --unsafe --no-errors-on-unmatched",
    "types:check": "turbo run types:check",
    "release": "for pkg in $(find packages -name package.json -not -path '*/node_modules/*'); do dir=$(dirname $pkg); echo Publishing $dir; (cd $dir && if ! grep -q '\"private\": true' package.json; then bun publish || true; else echo Skipping private package: $dir; fi); done && changeset tag",
    "version": "changeset version && bun update"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "commitlint-plugin-function-rules": "^4.1.1",
    "husky": "^9.1.7",
    "rimraf": "^6.1.2",
    "turbo": "2.6.1",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "packages/**",
    "apps/**"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.3"
}
